@model ClienteIndexViewModel

<h1>
    Lista de clientes
</h1>

<a href="/cliente/cadastrar" class="btn btn-primary mb-2">
    Cadastrar
</a>

<form action="/cliente" method="get">
    <div class="row">
        <div class="col">
            <label class="form-label" for="campo-pesquisa">Pesquisa</label>
            <input type="text" name="pesquisa" id="campo-pesquisa" value="@Model.Pesquisa"/>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
    <th>Código</th>
    <th>Nome</th>
    <th>CPF</th>
    <th>Endereço</th>
    <th>Ação</th>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Cpf</td>
                <td>@cliente.Endereco</td>
                <td>
                    <a class="btn btn-outline-primary"
                       href="/cliente/editar?id=@cliente.Id">
                        <i class="fa-solid fa-pen-to-square"></i>
                        Editar
                    </a>
                    <a class="btn btn-outline-danger"
                       href="/cliente/apagar?id=@cliente.Id">
                        <i class="fa-solid fa-trash-can"></i>
                        Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>